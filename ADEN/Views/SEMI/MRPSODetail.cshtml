@using Model.MRP;
@{
    List<MRPSODetail> details = ViewBag.Details;
}
<div class="modal-dialog modal-lg" id="MRPSODetail">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">@ViewBag.LabelOrderDetail</h4>
        </div>
        <div class="modal-body">
            <table class="table table-striped table-bordered dataTable" id="lineData">
                <thead>
                    <tr>
                        <th>@ViewBag.LabelOrderNumber</th>
                        <th>@ViewBag.LabelCode</th>
                        <th>@ViewBag.LabelDescription</th>          
                        <th>@ViewBag.LabelPrice</th>
                        <th>@ViewBag.LabelQty</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (MRPSODetail line in details)
                    {
                        <tr>
                            <td>@line.OrderCode</td>
                            <td>@line.ProductCode</td>
                            <td>@line.ProductName</td>
                            <td>@line.Price</td>
                            <td>@line.Qty</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">@ViewBag.LabelClose</button>
        </div>
    </div>
</div>
<script>
    $(function(){
        $('#lineData').DataTable({
            searching: false,
            lengthMenu: [[10, 20, 30, -1], [10, 20, 30, "ALL"]],
            dom: 'rt<"bottom"iflp<"clear">>',
            stateSave: false,
            deferRender: true,
            language: {
                "lengthMenu": "显示 _MENU_ 项结果",
                "info": "显示第 _START_ 至 _END_ 项结果，共 _TOTAL_ 项",
                "infoEmpty": "显示第 0 至 0 项结果，共 0 项",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "末页"
                }
            }
        });
    });
</script>

