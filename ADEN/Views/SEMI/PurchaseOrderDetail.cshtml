@using Model.Order;
@{
    PurchaseOrder order = ViewBag.Order;
}
<div class="modal-dialog modal-lg" id="PurchaseOrderDetail">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">@ViewBag.LabelOrderDetail</h4>
        </div>
        <div class="modal-body">
            <table class="table table-striped table-bordered dataTable" id="lineData">
                <thead>
                    <tr>
                        <th>@ViewBag.LabelCode</th>
                        <th>@ViewBag.LabelDescription</th>
                        <th>@ViewBag.LabelUnit</th>
                        <th>@ViewBag.LabelPrice</th>
                        <th>@ViewBag.LabelQty</th>
                        <th>@ViewBag.LabelAmt</th>
                        <th>@ViewBag.LabelReceiptQty</th>
                        <th>@ViewBag.LabelReceiptAmt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PurchaseOrderLine line in order.Lines)
                    {
                        <tr>
                            <td>@line.ItemCode</td>
                            <td>@line.ItemName</td>
                            <td>@line.UOMName</td>
                            <td>@line.Price</td>
                            <td>@line.Qty</td>
                            <td>@line.Amt</td>
                            <td>@line.ReceiptQty</td>
                            <td>@line.ReceiptAmt</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">@ViewBag.LabelClose</button>
        </div>
    </div>
</div>
<script>
    $(function(){
        $('#lineData').DataTable({
            searching: false,
            lengthMenu: [[5, 10, 30, -1], [5, 10, 30, "ALL"]],
            dom: 'rt<"bottom"iflp<"clear">>',
            stateSave: false,
            deferRender: true,
            language: {
                "lengthMenu": "@ViewBag.LabelLengthMenu",
                "info": "@ViewBag.LabelTableInfo",
                "infoEmpty": "@ViewBag.LabelTableInfoEmpty",
                "paginate": {
                    "first": "@ViewBag.LabelFirstPage",
                    "previous": "@ViewBag.LabelPreviousPage",
                    "next": "@ViewBag.LabelNextPage",
                    "last": "@ViewBag.LabelLastPage"
                }
            }
        });
    }); 
</script>

